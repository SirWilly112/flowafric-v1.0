# FlowAfric Environment Variables
# Copy this file to .env.local and update with your actual values

# App Store URLs
NEXT_PUBLIC_GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=com.flowafric
NEXT_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/flowafric/id1234567890

# Social Media URLs
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/flowafric
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/flowafric
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/flowafric

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@flowafric.com
NEXT_PUBLIC_SUPPORT_PHONE=+234-123-456-7890

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Newsletter Endpoint (Optional override)
NEXT_PUBLIC_NEWSLETTER_ENDPOINT=

# reCAPTCHA v3 (Optional but recommended for contact form)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_MIN_SCORE=0.3

# Brevo (Email delivery for contact form)
BREVO_API_KEY=
BREVO_SENDER_EMAIL=support@flowafric.com
BREVO_SENDER_NAME=FlowAfric Website
